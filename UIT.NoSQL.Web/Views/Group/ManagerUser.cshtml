@model UIT.NoSQL.Core.Domain.UserGroupObject

@{
    ViewBag.Title = "ManagerUser";
    Layout = null;
}


@section menu {
    <section id="topmenu">
        @Html.Action("TopMenuUser", "Group", new{action = "orther"})
    </section>
}

<script type="text/javascript">
    function xmlhttpPost(strURL) {
        
        $.post(strURL, getUserObject(), function (data) {
            alert(data);
        });

    }
    function getUserObject() {
        var id = document.getElementById("Id").value;
        var groupId = document.getElementById("GroupId").value;
        var userId = document.getElementById("UserId").value;
        var isReceiveEmail = document.getElementById("IsReceiveEmail").checked;
        
        var qstr = 
            {
                Id: id,
                GroupId: groupId,
                UserId: userId,
                IsReceiveEmail: isReceiveEmail
                
            };
        
        return qstr;
    }
</script>

<h2>ManagerUser</h2>

<div>
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>UserGroupObject</legend>

        <input type="hidden" id="Id" value="@Model.Id" />
        <input type="hidden" id="GroupId" value="@Model.GroupId" />
        <input type="hidden" id="UserId" value="@Model.UserId" />

        <div class="editor-label">
            @Html.LabelFor(model => model.GroupName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GroupName)
            @Html.ValidationMessageFor(model => model.GroupName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.JoinDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.JoinDate)
            @Html.ValidationMessageFor(model => model.JoinDate)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.IsReceiveEmail)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsReceiveEmail)
            @Html.ValidationMessageFor(model => model.IsReceiveEmail)
        </div>

        <p>
            <input type="button" value="Save" onclick="xmlhttpPost('/Group/UpdateManagerUser'); return false;" />
        </p>
    </fieldset>
</div>